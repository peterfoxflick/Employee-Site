<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head.ejs %>
    <title>FTC Passwords | Password List</title>
</head>
<body>
<% include ../partials/nav.ejs %>
<div class="jumbotron">
    <div class="container">
        <h1>Password Lists</h1>
        <div class="row">
            <!--searches the table by using a javascript function-->
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1"><span
                            class="glyphicon glyphicon-search"></span></span>
                <input id="search" class="form-control" onkeyup="cardSearch('search','cards')"
                       placeholder="Search by Name">
            </div>
        </div>
    </div>

    <p>
  <button class="btn btn-light" type="button" data-toggle="collapse" data-target="#addPass" aria-expanded="false" aria-controls="collapseExample">
    Add New Password
  </button>
</p>




<div class="collapse" id="addPass">
    <div class="card">
                <form id="newEmpForm" action="/passwords/add" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <label for="name">Name: </label>
                                <input class="form-control" required type="text" id="name" name="name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <label for="description">Description: </label>
                                <input type="text" id="description" required name="description" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <label for="pass">Password: </label>
                                <input type="text" id="pass" required name="pass" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <label for="url">Url: </label>
                                <input type="text" id="url" name="url" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Submit" class="btn "/>

                        <!-- <button type="button" class="btn btn-primary" onclick="addPassword()" data-dismiss="modal"
                                data-toggle="modal" data-target="#myModal">Add password
                        </button> -->
                        <button type="button" class="btn " data-dismiss="modal" data-toggle="collapse" data-target="#addPass">Close</button>
                    </div>
                </form>

            </div>
</div>
</div>





<div class="container">
    <section>
        <ul id="cards" style="list-style: none">
        <div class="row text-center">
            <% for(var i = 0; i < passwords.length; i++) { %>
            <li><div class="col-sm-12 col-md-6 col-lg-4 animated fadeIn">
                <div class="panel <% if(i % 2 == 0 ) {%>panel-accent<%} else {%> panel-primary <%}%> empCard">
                    <div class="panel-heading">
                        <span><h4><a href="<%= passwords[i].Url %>" class="h4"><%= passwords[i].Name %></a></h4></span>
                    </div>
                    <div class="panel-body text-center">
                        <img src="<%= passwords[i].Img %>" class="img img-responsive" style="height:100%; width: auto;">
                    </div>
                        <div class="panel-footer">
                            <span><h5><%= passwords[i].Pass %></h5></span>
                            <span><p><%= passwords[i].Description %></p></span>
                        </div>

                </div>
            </div>
           <% }%>
        </div></li>
        </ul>
    </section>
</div>
<script src="/javascripts/tableSearch.js" type="text/javascript" rel="script"></script>
</body>
</html>