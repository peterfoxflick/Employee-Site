
<div id="edit" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Password - ID:<span id="editPassId"></span></h4>
            </div>
            <div class="modal-body">
                <form id="editPassword" action="/passwords/edit" method="post">
                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group col-md-12">
                                <label for="editName">Name: </label>
                                <input class="form-control" required type="text" id="editName" name="editName">
                            </div>
                        

                            <div class="form-group col-md-12">
                                <label for="editPass">Password: </label>
                                <input type="text" id="editPass" required name="editPass" class="form-control">
                            </div>
                        
                            
                            <div class="form-group col-md-12">
                                <label for="editUrl">Url: </label>
                                <input type="text" id="editUrl" name="editUrl" class="form-control">
                            </div>
                        
                        </div>
                        <div class="col-md-6">
                            
                            <div class="form-group col-md-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Description: </span>
                                </div>
                                <textarea class="form-control" id="editDescription" name="editDescription" aria-label="With textarea"></textarea>
                            </div>

                        </div>


                    </div>


                    <div class="modal-footer">
                        <input class="form-control" required type="hidden" id="passIdVal" name="passIdVal">

                        <input type="submit" value="Submit" class="btn btn-success"/>

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                
                </form>
            </div>

        </div>

    </div>
</div>