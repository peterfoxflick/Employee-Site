<script rel="script" type="text/javascript" src="javascripts/password.js"></script>
<link href="stylesheets/passwords.css" rel="stylesheet" type="text/css">
<div id="edit" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Password</h4>
            </div>
            <div class="modal-body">
                <form id="newEmpForm" action="/passwords/edit" enctype="multipart/form-data" method="post">
                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group col-md-12">
                                <label for="name">Name: </label>
                                <input class="form-control" required type="text" id="name" name="name" placeholder="<%=passwords[editPassID].Name %>">
                            </div>
                        

                            <div class="form-group col-md-12">
                                <label for="pass">Password: </label>
                                <input type="text" id="pass" required name="pass" class="form-control">
                            </div>
                        
                            
                            <div class="form-group col-md-12">
                                <label for="url">Url: </label>
                                <input type="text" id="url" name="url" class="form-control">
                            </div>
                        
                        </div>
                        <div class="col-md-6">
                            
                            <div class="form-group col-md-12">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Description: </span>
                                </div>
                                <textarea class="form-control" id="description" name="description" aria-label="With textarea"></textarea>
                            </div>


                            <div class="custom-file col-md-12">
                                <input type="file" accept=".png" class="custom-file-input" id="picture" name="picture">
                                <label class="custom-file-label" for="picture">Choose file for Image</label>
                            </div>

                        </div>


                    </div>


                    <div class="modal-footer">
                        <input type="submit" value="Submit" class="btn btn-success"/>

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                
                </form>
            </div>

        </div>

    </div>
</div>